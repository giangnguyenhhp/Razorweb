@page
@model IndexModel

@{
    ViewData["Title"] = "Các bài viết";
    var i = 0;
}
@Url.Page("/Blog/Index", new { abc = 3, p = 2 })
@{
    var pagingmodel = new Helpers.PagingModel
    {
        currentPage = Model.currentPage,
        countPages = Model.countPages,
        generateUrl = p => Url.Page("/Blog/Index", new { p })
    };
}



<h1>Danh sách bài viết</h1>

<form method="get" asp-page="./Index">
    <label>Tìm kiếm</label>
    <input name="SearchString" value=""/>
    <button class="btn btn-primary">Tìm</button>
</form>

<p>
    <a asp-page="Create" class="btn btn-primary">Tạo bài viết mới</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th colspan="">STT</th>
        <th>
            @Html.DisplayNameFor(model => model.Article[0].Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Article[0].Created)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Article)
    {
        <tr>
            <td>@(++i)</td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Chỉnh sửa</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Chi tiết</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<partial name="Shared/_Paging" model="pagingmodel"/>