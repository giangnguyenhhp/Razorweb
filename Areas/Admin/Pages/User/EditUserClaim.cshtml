@page
@model ASP12_RazorPage_EntityFramework.Areas.Admin.Pages.User.EditUserClaim

@{
    ViewData["Title"] = "Thêm claim cho user";
}

<!DOCTYPE html>

<html lang="en">
<head>
    <title></title>
</head>
<body>
<div>
    <partial name="_StatusMessage" model="Model.StatusMessage"/>
    <h2>@ViewData["Title"] : @Model.User?.UserName</h2>
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.ClaimType" class="form-control" autocomplete="name" aria-required="true" placeholder="name"/>
                    <label asp-for="Input.ClaimType"></label>
                    <span asp-validation-for="Input.ClaimType" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.ClaimValue" class="form-control" autocomplete="name" aria-required="true" placeholder="name"/>
                    <label asp-for="Input.ClaimValue"></label>
                    <span asp-validation-for="Input.ClaimValue" class="text-danger"></span>
                </div>

                <div class="form-group py-3">
                    @if (Model.Claims != null)
                    {
                        <input type="submit" value="Cập nhật" class="btn btn-primary"/>
                        <input type="submit" asp-page-handler="DeleteClaim" asp-route-claimid="@Model.Claims.Id" value="Xóa" class="btn btn-danger"/>
                    }
                    else
                    {
                        <input type="submit" value="Tạo mới" class="btn btn-primary"/>
                    }
                    <a class="btn btn-primary" asp-page="./AddRole" asp-route-id="@Model.User?.Id">Edit UserRole</a>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
</html>