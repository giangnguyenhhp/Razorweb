@using Microsoft.AspNetCore.Identity.UI.V4.Pages.Account.Manage.Internal
@model ASP12_RazorPage_EntityFramework.Areas.Admin.Pages.User.AddRoleModel
@{
    ViewData["Title"] = "Gán Role(vai trò)";
    // ViewData["ActivePage"] = ManageNavPages.ChangePassword;

}

<h3>Thiết lập vai trò(role) cho thành viên(user) : @Model.User.UserName</h3>
<partial name="_StatusMessage" for="StatusMessage"/>

<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-group mb-3">
                <label asp-for="RoleNames"></label>
                @Html.ListBoxFor(m => m.RoleNames, @Model.AllRoles, new
                {
                    id = "id-select-roles",
                    @class = "w-75"
                })
                <span asp-validation-for="RoleNames" class="text-danger"></span>
            </div>

            <button type="submit" class=" btn btn-primary">Cập nhật</button>
            <a asp-page="./Index" class="btn btn-primary">Danh sách các thành viên</a>
        </form>
        <hr/>
        <p>Các claim của user có trong role :</p>
        @if (Model.ClaimInRole.Count > 0)
        {
            <ul>
                @foreach (var claim in Model.ClaimInRole)
                {
                    <li>
                        @claim.ClaimType : @claim.ClaimValue
                    </li>
                }
            </ul>
        }
        <p>
            Các claim của riêng user :
            <a asp-page="./EditUserClaim" asp-page-handler="AddClaim" asp-route-userid="@Model.User.Id">+ Thêm claim cho user</a>
        </p>
        @if (Model.ClaimInUser.Count > 0)
        {
            <ul>
                @foreach (var claim in Model.ClaimInUser)
                {
                    <li>
                        <a asp-page="./EditUserClaim" asp-page-handler="EditClaim" asp-route-claimid="@claim.Id">@claim.ClaimType : @claim.ClaimValue</a>
                    </li>
                }
            </ul>
        }
    </div>
</div>

@section Scripts {
    <script src="~/lib/multiple-select/multiple-select.min.js"></script>
    <link rel="stylesheet" href="~/lib/multiple-select/multiple-select.min.css"/>

    <script>
    $("#id-select-roles").multipleSelect({
        selectAll : false,
        keepOpen : false,
        isOpen : false
    });
    </script>

    <partial name="_ValidationScriptsPartial"/>
}