@page "/Admin/assign-user-role/{id}"
@using Microsoft.AspNetCore.Identity.UI.V4.Pages.Account.Manage.Internal
@model ASP12_RazorPage_EntityFramework.Areas.Admin.Pages.User.AddRoleModel
@{
    ViewData["Title"] = "Gán Role(vai trò)";
    // ViewData["ActivePage"] = ManageNavPages.ChangePassword;

}

<h3>Thiết lập vai trò cho thành viên : @Model.User.UserName</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-group mb-3">
                <label asp-for="RoleNames"  ></label>
                @Html.ListBoxFor(m=>m.RoleNames,@Model.allRoles,new
                {
                    id = "id-select-roles",
                    @class="w-75"
                } )
                <span asp-validation-for="RoleNames" class="text-danger"></span>
            </div>

            <button type="submit" class=" btn btn-primary">Cập nhật</button>
            <a asp-page="./Index" class="btn btn-primary">Danh sách các thành viên</a>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/multiple-select/multiple-select.min.js"></script>
    <link rel="stylesheet" href="~/lib/multiple-select/multiple-select.min.css"/>

    <script>
    $("#id-select-roles").multipleSelect({
        selectAll : false,
        keepOpen : false,
        isOpen : false
    });
    </script>

    <partial name="_ValidationScriptsPartial"/>
}
