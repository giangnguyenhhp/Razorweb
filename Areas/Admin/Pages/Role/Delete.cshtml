@page
@model ASP12_RazorPage_EntityFramework.Areas.Admin.Pages.Role.Delete

@{
    ViewData["Title"] = "Xóa Role";
}

<!DOCTYPE html>

<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
</head>
<body>
<div>
    <h1>@ViewData["Title"]</h1>
    <partial name="_StatusMessage" model="@Model.StatusMessage"/>
</div>
<hr/>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h3>Bạn có chắc chắc xóa role <strong>@Model.Role.Name</strong> không?</h3>
            <div class="form-group py-3">
                <input type="submit" value="Đồng ý" class="btn btn-danger" />
                <a class="btn btn-primary" asp-page="./Index">Danh sách các Role</a>
            </div>
        </form>
    </div>
</div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}