@page
@model ASP12_RazorPage_EntityFramework.Areas.Admin.Pages.Role.EditRoleClaim

@{
    ViewData["Title"] = "Chỉnh sửa đặc tính (claim) cho vai trò (role)";
}

<!DOCTYPE html>

<html lang="en">
<head>
    <title>@ViewData["Title"] </title>
</head>
<body>
<div>
    <h1>@ViewData["Title"] : @Model.role?.Name</h1>
    <partial name="_StatusMessage" model="@Model.StatusMessage"/>
</div>
<hr/>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ClaimType" class="form-control" autocomplete="name" aria-required="true" placeholder="name" />
                <label asp-for="Input.ClaimType"></label>
                <span asp-validation-for="Input.ClaimType" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ClaimValue" class="form-control" autocomplete="name" aria-required="true" placeholder="name" />
                <label asp-for="Input.ClaimValue"></label>
                <span asp-validation-for="Input.ClaimValue" class="text-danger"></span>
            </div>
            
            <div class="form-group py-3">
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
                <input type="submit" asp-page-handler="Delete" asp-route-claimid="@if (Model.claim != null) {@Model.claim.Id }" value="Xóa" class="btn btn-danger" />
                <a class="btn btn-primary" asp-page="./Edit" asp-route-roleid="@Model.role?.Id">Edit Role</a>
            </div>
        </form>
    </div>
</div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}